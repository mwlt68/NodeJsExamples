<div class="container">
    <div class="row">
    <div class="loginPanel">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">
                    Sign Up Panel
                </div>
            </div>
            <form action="/signup" method="POST">
            <div class="panel-body">
                    <!-- Name-->

                    <div style="margin-bottom:25px" class="input-group">
                        <span class="input-group-addon" ><i class="glypicon glypicon-user" aria-hidden="true"></i></span>
                        <input id="name" type="text" class="form-control" name="name" placeholder="Name">
                    </div>
                    <!-- Surname-->

                    <div style="margin-bottom:25px" class="input-group">
                        <span class="input-group-addon"><i class="glypicon glypicon-lock"></i></span>
                        <input id="surname" type="text" class="form-control" name="surname" placeholder="Surname">
                    </div>
                    <!-- User Name-->

                    <div style="margin-bottom:25px" class="input-group">
                        <span class="input-group-addon" ><i class="glypicon glypicon-user" aria-hidden="true"></i></span>
                        <input id="username" type="text" class="form-control" name="username" placeholder="User Name">
                    </div>
                    <!-- Password-->

                    <div style="margin-bottom:25px" class="input-group">
                        <span class="input-group-addon"><i class="glypicon glypicon-lock"></i></span>
                        <input id="password" type="text" class="form-control" name="password" placeholder="Password">
                    </div>


                
            </div>
            <div class="panel-footer clearfix">
                <div class="pull-right">
                    <input type="submit" class="btn btn-success" value="Okey" >
                </div>
                <div class="pull-left">
                    <a href="/login" class="btn btn-primary">Log In</a>
                </div>
            </div>
        </form>
        </div>
    </div>   
    </div>
</div>